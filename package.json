    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.10.3"
  }
